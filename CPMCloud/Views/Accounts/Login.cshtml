<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-signin-client_id" content="981562863577-pdve3k27c8aggkalvd0n01mb9ln42psk.apps.googleusercontent.com">
    <title> @LoginResources.Title | @ApplicationResources.AppName</title>
    <!-- Bootstrap -->
    <link href="~/Content/Common/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/Common/font-awesome.css" rel="stylesheet" />
    <!-- Font Glyphicons -->
    <link href="~/Content/Common/font-glyphicons.css" rel="stylesheet" />
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet" />
    <!-- iCheck bộ thư viện custom cho checkbox và radio button-->
    <link href="~/vendors/iCheck/skins/flat/green.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/Content/Common/custom.min.css" rel="stylesheet" />
    <!-- BEGIN Pre-requisites -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js">
    </script>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" type="text/css">
    <script src="https://apis.google.com/js/api:client.js"></script>
    <script src="https://apis.google.com/js/client:platform.js?onload=start" async defer>
    </script>
    <!-- END Pre-requisites -->
    <style type="text/css">
        #customBtn {
            display: inline-block;
            background: white;
            color: #444;
            width: 250px;
            border-radius: 5px;
            border: thin solid #888;
            box-shadow: 1px 1px 1px grey;
            white-space: nowrap;
        }

            #customBtn:hover {
                cursor: pointer;
            }

        span.label {
            font-family: serif;
            font-weight: normal;
        }

        span.icon {
            background: url('/Images/Icons/g-normal.png') transparent 5px 50% no-repeat;
            display: inline-block;
            vertical-align: middle;
            width: 42px;
            height: 42px;
        }

        span.buttonText {
            display: inline-block;
            vertical-align: middle;
            padding-left: 20px;
            padding-right: 42px;
            font-size: 14px;
            font-weight: bold;
            /* Use the Roboto font that is loaded in the <head> */
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>

<body class="login">

    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form method="post" action="@Url.Action("login","accounts")">
                        @Html.AntiForgeryToken()
                        <h1>@LoginResources.LoginFormTitle</h1>
                        <div style="color:red">
                        @Html.ValidationSummary()
                        </div>
                        <div>
                            <input type="text" name="Username" class="form-control" placeholder="@LoginResources.UsernamePlaceholder" required autofocus/>
                        </div>
                        <div>
                            <input type="password" name="Password" class="form-control" placeholder="@LoginResources.PasswordPlaceholder" required />
                        </div>
                        <div>
                            <button class="btn btn-default submit">@LoginResources.btnLogin</button>
                            <a class="reset_pass" href="#">@LoginResources.ForgotPassword</a>                 
                        </div>
                        <div style="text-align:center;">
                            @*<button class="btn btn-default" onclick="loginGoogle()"  id="btnGoogleLogin">Login with Google</button>*@
                            @*<button id="signinButton">Sign in with Google</button>*@
                            <div id="customBtn" class="customGPlusSignIn">
                                <span class="icon"></span>
                                <span class="buttonText">Đăng nhập bằng Google</span>
                            </div>
                            <script>
                                var userGoogle = {};
                                $('#customBtn').click(function () {
                                    gapi.load('auth2', function () {
                                        auth2 = gapi.auth2.init({
                                            client_id: '981562863577-pdve3k27c8aggkalvd0n01mb9ln42psk.apps.googleusercontent.com',
                                            // Scopes to request in addition to 'profile' and 'email'
                                            scope: 'email profile'
                                        });
                                        if (auth2.isSignedIn.get()) {
                                            var profile = auth2.currentUser.get().getBasicProfile();
                                            userGoogle.Id = profile.getId();
                                            userGoogle.Username = profile.getEmail();
                                            userGoogle.FullName = profile.getName();
                                            userGoogle.ImageUrl = profile.getImageUrl();
                                            userGoogle.Email = profile.getEmail();
                                            loginGoogle();
                                        }

                                        else {
                                            auth2.signIn().then(function () {
                                                var profile = auth2.currentUser.get().getBasicProfile();
                                                userGoogle.ID = profile.getId();
                                                userGoogle.Username = profile.getEmail();
                                                userGoogle.FullName = profile.getName();
                                                userGoogle.ImageUrl = profile.getImageUrl();
                                                userGoogle.Email = profile.getEmail();
                                                loginGoogle();
                                            });
                                        }

                                    });
                                    // signInCallback defined in step 6.
                                    function loginGoogle() {
                                            console.log('userGoogle', userGoogle);
                                        if (userGoogle) {
                                            $.ajax({
                                                type: 'POST',
                                                url: '/Accounts/GoogleLogin',
                                                // Always include an `X-Requested-With` header in every AJAX request,
                                                // to protect against CSRF attacks.
                                                data: JSON.stringify(userGoogle),
                                                dataType: 'json',
                                                headers: {
                                                    'X-Requested-With': 'XMLHttpRequest'
                                                },
                                                contentType: 'application/json; charset=utf-8',
                                                success: function (result) {
                                                    // Handle or verify the server response.
                                                },
                                                processData: false,
                                            });
                                        }
                                    }
                                  });

                            </script>
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <p class="change_link">
                            </p>
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                <h1><span class="glyphicons glyphicons-fire"></span> Cybertron!</h1>
                                <p>©2017 All Rights Reserved. Privacy and Terms</p>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <!-- Jquery -->
    <script src="~/vendors/jquery/dist/jquery.js"></script>
    <!-- iCheck -->
    <script src="~/vendors/iCheck/icheck.min.js"></script>
</body>
</html>