<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title | @ApplicationResources.AppName</title>
    <link rel="icon" href="~/Images/Icons/glyphicons-715-user-structure.png">

    @Styles.Render("~/css/common")
    @Styles.Render("~/css/pnotify")
    @Styles.Render("~/css/dataTable")
    @Styles.Render("~/css/inlineValidation")
    @Styles.Render("~/css/confirm")
    
    <link href="~/vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css" rel="stylesheet" />

</head>
<body class="nav-md footer_fixed" ng-app="CybertronPolicyManagement">
    <div class="container body">
        <div class="main_container">
            <div id="processingContainer" style="display: none;">
                <div id="processingContent">
                    <img src="~/Images/Icons/loading.gif" alt="" width="25" />
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-md-3 left_col menu_fixed" style="z-index: 9999999;">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title">
                        <a href="@Url.Action("index","home")" class="site_title"><i class="@ApplicationResources.FontIcon"></i> <span>@ApplicationResources.AppNameSumary</span></a>
                    </div>
                    <div class="clearfix"></div>
                 
                    <!-- menu profile quick info -->
                    <div class="profile clearfix">
                        <div class="profile_pic" style="width:70%; text-align:center">
                            <img src="~/Images/Avatar/17156037_1253402538088938_7718839922421342644_n.jpg" alt="..." class="img-circle profile_img" style="width:100%">
                        </div>
                        <div class="profile_info" style="text-align:center; width:100%">
                            @{
                                User user = (User)Session["USER"];
                                if (user != null)
                                {
                                    <span>Xin chào,</span>
                                    <h2>@user.FullName</h2>
                                }
                            }
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <!-- /menu profile quick info -->

                    <br />
                    <!-- sidebar menu -->
                    @RenderPage("_LeftMenu.cshtml")
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <div class="sidebar-footer hidden-small">
                        <a data-toggle="tooltip" data-placement="top" title="Settings">
                            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="FullScreen">
                            <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Lock">
                            <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
                        </a>
                        <a data-toggle="tooltip" data-placement="top" title="Logout" href="@Url.Action("Logout","Accounts")">
                            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
                        </a>
                    </div>
                    <!-- /menu footer buttons -->
                </div>
            </div>
            <!-- top navigation -->
            @RenderPage("_TopNavigation.cshtml")
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main" style="padding-bottom:75px">
                @RenderBody()
            </div>
            <!-- /page content -->
            <!-- footer content -->
            <footer style="z-index: 999999">
                <div class="pull-right">
                    @ApplicationResources.AppName - Cybertron ©2017
                </div>
                <div class="clearfix"></div>
            </footer>
            <!-- /footer content -->
        </div>
    </div>

    @Scripts.Render("~/js/common")
    @Scripts.Render("~/js/pnotify")
    @Scripts.Render("~/js/dataTable")
    @Scripts.Render("~/js/angular")
    @Scripts.Render("~/js/angularJS")
    @Scripts.Render("~/js/inlineValidation")
    @Scripts.Render("~/js/confirm")
    <script src="~/Scripts/Common/CybertronLibrary.js"></script> 
    <script type="text/javascript">
        $(window).load(function () {
            NProgress.done();
            $("form").validationEngine({ promptPosition: 'inline' });
        });
    </script>
    <script src="~/vendors/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js"></script>
    @RenderSection("script", false)
</body>
</html>
