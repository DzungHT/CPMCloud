<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="title_left">
        <h3 ng-if="dataSave.ApplicationID == ''">Thêm mới ứng dụng</h3>
        <h3 ng-if="dataSave.ApplicationID != ''">Cập nhật ứng dụng</h3>
    </div>
</div>
<div class="x_panel">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <form id="saveForm" class="form-horizontal form-label-left">
            @Html.AntiForgeryToken()
            <input ng-model="dataSave.ApplicationID" id="ApplicationID" name="ApplicationID" type="hidden">
            <div class="form-group no-padding">
                <label class="control-label col-sm-2">
                    Mã ứng dụng <span class="red">*</span>
                </label>
                <div class="col-sm-4">
                    <input ng-model="dataSave.Code" id="CodeFilter" name="Code" type="text" class="form-control validate[required,maxSize[255]]" placeholder="Mã ứng dụng">
                </div>
                <label class="control-label col-sm-2">
                    Tên ứng dụng <span class="red">*</span>
                </label>
                <div class="col-sm-4">
                    <input ng-model="dataSave.Name" id="NameFilter" name="Name" type="text" class="form-control validate[required,maxSize[255]]" placeholder="Tên ứng dụng">
                </div>
            </div>
            <div class="form-group no-padding">
                <label class="control-label col-sm-2">
                    Mô tả
                </label>
                <div class="col-sm-10">
                    <textarea ng-model="dataSave.Description" id="Description" name="Description" class="form-control validate[maxSize[500]]" maxlength="500" rows="3"></textarea>
                </div>
            </div>

            <div class="form-group">
                <button type="button" class="btn btn-success" style="float:right" onclick="actionSave()">
                    Lưu
                </button>
                <button type="button" class="btn btn-default" style="float:left" onclick="goSearch()">
                    Quay lại danh sách
                </button>
            </div>
        </form>
    </div>
</div>